# Environment Variables Template
# Copy this to .env and fill in your actual values

# Azure OpenAI Configuration (RECOMMENDED)
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_DEPLOYMENT_NAME=your_gpt_deployment_name
AZURE_OPENAI_WHISPER_DEPLOYMENT=your_whisper_deployment_name
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# Alternative: Regular OpenAI (if not using Azure)
OPENAI_API_KEY=your_openai_api_key_here

# Bot Framework Configuration
MICROSOFT_APP_ID=your_bot_app_id_here
MICROSOFT_APP_PASSWORD=your_bot_app_password_here

# Port Configuration
PORT=3000